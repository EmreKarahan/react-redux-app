{
  "name": "react-redux-app",
  "author": {
    "name": "Emre Karahan",
    "url": "https://github.com/EmreKarahan/react-redux-app.git",
    "email": "emre.karahan@gmail.com"
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "global": "^4.3.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "codecov": "^2.3.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "istanbul": "^0.4.5",
    "jest-cli": "^21.0.1",
    "lint-staged": "^4.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.6.1",
    "react-scripts": "1.0.13",
    "react-test-renderer": "^15.6.1",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint .",
    "lint": "yarn run lint:eslint && yarn run lint:stylelint",
    "format":
      "prettier --print-width=100 --single-quote --trailing-comma all --write \"{src,__tests__}/**/*.js\"",
    "lint-staged": "lint-staged",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "yarn run lint && yarn test && yarn run coverage",
    "coverage":
      "yarn run test -- --coverage --collectCoverageFrom=src/**/*.js --collectCoverageFrom=!src/index.js",
    "postcoverage":
      "istanbul check-coverage --statements 90 --functions 90 --branches 90 --lines 90",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": ["yarn run format", "git add"]
  },
  //"pre-commit": "lint-staged",
  "jest": {
    "snapshotSerializers": ["<rootDir>/node_modules/enzyme-to-json/serializer"]
  }
}
